@using HtmlHelpers.BeginCollectionItemCore
@model CandidatosProyect.Client.Models.EmpleoModel

<div id="empleo-@Model.Id">
    @using (Html.BeginCollectionItem(nameof(CandidatoModel.Empleos)))
    {        
        <div class="row">
            <div class="col-md-6">

                <h4>Empleo</h4>
                <hr />

                <input asp-for="Id" type="hidden" />
                <input asp-for="CodigoCandidato" type="hidden" />

                <button id="deleteEmpleo-@Model.Id" type="button" class="btn btn-danger deleteButton">Eliminar Empleo</button>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NombreEmpresa" class="control-label"></label>
                    <input asp-for="NombreEmpresa" class="form-control" />
                    <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaInicio" class="control-label"></label>
                    <input asp-for="FechaInicio" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaFinal" class="control-label"></label>
                    <input asp-for="FechaFinal" class="form-control" />
                    <span asp-validation-for="FechaFinal" class="text-danger"></span>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
